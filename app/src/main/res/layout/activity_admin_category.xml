<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">
    
    <ImageView
        android:id="@+id/choose_image"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:src="@drawable/select_product_image"/>

    <EditText
        android:id="@+id/input_product_name"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/choose_image"
        android:layout_centerHorizontal="true"
        android:hint="Product name"/>

    <EditText
        android:id="@+id/input_product_description"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/input_product_name"
        android:layout_centerHorizontal="true"
        android:hint="Product description"/>
    
    <EditText
        android:id="@+id/input_product_price"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/input_product_description"
        android:layout_centerHorizontal="true"
        android:hint="Product price"/>
    
    <Button
        android:id="@+id/add_product_button"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Add Product"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/input_product_price"/>

</RelativeLayout>